<table class="table my-3">
    <caption><h3>Species</h3></caption>
    <tr>
        <th>SpeciesID</th>
        <th>Image</th>
        <th>Name</th>
        <th>Element</th>
        <th>Base Stats</th>
        <th>Action</th>
    </tr>
    @foreach(var item in ViewBag.Species)
    {
    <tr>
        <td>@item.SpeciesID</td>
        <td><img src="/img/monster/@item.Image" alt="@item.Name"></td>
        <td>@item.Name</td>
        <td>@item.Element.Name</td>
        <td></td>
        <td><a type="btn btn-link" href="">Edit</a> <a type="btn btn-link" href="">Remove</a></td>
    </tr>
    }
    <tr>
        <td>1</td>
        <td>item.Name</td>
        <td><a type="btn btn-link" href="">Edit</a> <a type="btn btn-link" href="">Remove</a></td>
    </tr>
    <tr>
        <td colspan="3"><a asp-action="AddNewElement" asp-controller="Admin" class="btn">Add New Element...</a></td>
    </tr>
</table>