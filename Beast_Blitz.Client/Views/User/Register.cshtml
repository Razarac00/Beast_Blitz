@{
    ViewData["Title"] = "Register today!"; 
}

@model Beast_Blitz.Domain.Models.Player

<h2 class="my-4">Join Today!</h2>
<form asp-action="Register" asp-controller="User" method="post">
    <table class="table table-borderless">
        <tr>
            <td><label asp-for="Username"></label></td>
            <span asp-validation-for="Username"></span>
            <td><input type="text" class="form-control" asp-for="Username"></td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <span asp-validation-for="Email"></span>

            <td><input type="text" class="form-control" asp-for="Email"></td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <span asp-validation-for="Password"></span>

            <td><input type="password" class="form-control" asp-for="Password"></td>
        </tr>
    </table>

        @Html.Partial("_PetCreatorPartial")
        @Html.AntiForgeryToken()
</form>