@model Beast_Blitz.Domain.Models.Pet
@{
    ViewData["Title"] = "Care for your pet";
}


<h5 class="text-center my-2">What would you like to do?</h5>
<h6 class="text-center my-2">@Model.Name</h6>
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="250" height="250">
    <defs>
        <filter id="colorMask1">
            <feFlood flood-color="@Model.Color" result="flood" />
            <feComposite in="SourceGraphic" in2="flood" operator="arithmetic" k1="1" k2="0" k3="0" k4="0" />
        </filter>
    </defs>
    <image width="100%" height="100%" xlink:href="/img/monster/@Model.Species.Image" class="img-fluid" filter="url(#colorMask1)">
</svg>

<div class="row" id="stats">
    <div class="col-4">
        <i class="fas fa-smile-beam mx-auto" data-toggle="tooltip" data-placement="top" title="Happiness"></i>
    </div>
    <div class="col-4">
        <i class="fas fa-drumstick-bite mx-auto" data-toggle="tooltip" data-placement="top" title="Hunger"></i>
    </div>
    <div class="col-4">
        <i class="fas fa-bath mx-auto" data-toggle="tooltip" data-placement="top" title="Cleanliness"></i>
    </div>
</div>
<div class="row my-1" id="statnum">
    <div class="col-4" id="happynum">
        @Model.CareStats.Happiness / 100
    </div>
    <div class="col-4" id="foodnum">
        @Model.CareStats.Fullness / 100
    </div>
    <div class="col-4" id="cleannum">
        @Model.CareStats.Cleanliness / 100
    </div>
</div>

<div class="row">
    <div class="col-4">
        <form action="" class="my-2" method="post">
            <button class="form-control btn btn-dark">Play</button>
        </form>
    </div>
    <div class="col-4">
        <form action="" class="my-2" method="post">
            <button class="form-control btn btn-dark">Feed</button>
        </form>
    </div>
    <div class="col-4">
        <form action="" class="my-2" method="post">
            <button class="form-control btn btn-dark">Clean</button>
        </form>
    </div>
</div>


